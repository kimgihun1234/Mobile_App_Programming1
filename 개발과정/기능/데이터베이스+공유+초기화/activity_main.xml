<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/cnt"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="count"
        android:id="@+id/btn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="데이터 직접 추가"
        android:onClick="clickInsert"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저장된 데이터베이스 보기"
        android:onClick="clickSelectAll"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘 기록 보기"
        android:onClick="clickSelectByName"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘 기록 업데이트"
        android:onClick="clickUpdate"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘 기록 전부 삭제"
        android:onClick="clickDelete"/>
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/share"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:onClick="ScreenshotButton"/>

</LinearLayout>
